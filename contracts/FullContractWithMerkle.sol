contract Crew is ERC721("NEW_COL", "CRW"), ERC721Enumerable, Ownable {
	using Strings for uint256;
	using SafeMath for uint256;

	string private uri = "www/asdf";
	bool public isMintActive = false;
	string private mockUri = "www/test";
	uint256 public cost = 0.36 ether;
	uint256 public supply = 10000;
	address private ownerAddress = 0xf39Fd6e51aad88F6F4ce6aB8827279cffFb92266;
	uint256 public maxMint = 5;
	bytes32 public merkleRoot = "0x124adf123";
	bool public isPremintActive = false;
	bool public reveal = false;

	function publicMint(
		uint256 _numOfTokens
	)
		public
		payable
	{
		require(isMintActive, 'Public mint is not active now!');
		require(_numOfTokens <= maxMint, "You are trying to mint too many tokens!");
		require(totalSupply().add(_numOfTokens) <= supply, "There are less non minted tokens than you are trying to mint!");
		require(cost.mul(_numOfTokens) == msg.value, "Ether amount is not correct");
        
		for(uint j = 0; j < _numOfTokens; j++) {
			_safeMint(msg.sender, totalSupply());
		}
	}
	function withdraw() public onlyOwner 
	{
		uint balance = address(this).balance;
		require(balance > 0, "Balance should be more then zero");
		payable(address(ownerAddress)).transfer(balance);
	}
	function setMintActive(bool _isMintActive) onlyOwner() public {
		isMintActive = _isMintActive;
	}
	function setCost(uint256 _newCost) public onlyOwner {
		cost = _newCost;
	}
	function setMaxMintAmount(uint256 _newMaxMintAmount) public onlyOwner {
		maxMint = _newMaxMintAmount;
	}
	function setSupply(uint256 _newSupply) public onlyOwner {
		supply = _newSupply;
	}
	function setOwnerAddress(address _newOwnerAddress) public onlyOwner {
		ownerAddress = _newOwnerAddress;
	}
	function setUri(string memory _newUri) public onlyOwner {
		uri = _newUri;
	}
	function setPremintActive(bool _isPremintActive) onlyOwner() public {
	isPremintActive = _isPremintActive;
	}
	function verifyMerkleProof(bytes32[] memory proof, bytes32 leaf) public view returns (bool) {
		bytes32 currentHash = sha256(abi.encodePacked(leaf));
		for (uint256 j = 0; j < proof.length; j++) {
			bytes32 currentProof = proof[j];
            
				if (currentHash <= currentProof) {
					currentHash = sha256(abi.encodePacked(currentHash, currentProof));
				} else {
					currentHash = sha256(abi.encodePacked(currentProof, currentHash));
				}
			}
		return currentHash == merkleRoot;
	}
	function mintNFTDuringPresale(
		uint256 _numOfTokens,
		bytes32[] memory _proof
	) 
		public 
		payable
	{
		require(isPremintActive, 'Premint is not active now!');
		require(verifyMerkleProof(_proof, bytes32(uint256(uint160(msg.sender)))), "You are not allowed to mint at this phase!");
		require(totalSupply().add(1) <= supply, 'There are less non minted tokens than you are trying to mint!');
		require(_numOfTokens <= 1, "You are trying to mint too many tokens!");
		require(cost == msg.value, "Ether amount is not correct");
		_safeMint(msg.sender, totalSupply());
	}
	function setRoot(uint256 _root) onlyOwner() public {
		merkleRoot = bytes32(_root);
	}
	function setMockUri(string memory _newMockUri) public onlyOwner {
		mockUri = _newMockUri;
	}
	function makeReveal() external onlyOwner 
	{
		reveal = true;
	}
	function tokenURI(uint256 _tokenId) public view virtual override
		returns (string memory) 
	{
		require(_exists(_tokenId), "ERC721Metadata: URI query for nonexistent token");
		if (!reveal) {
 			return string(abi.encodePacked(mockUri));
		} else {
			return string(abi.encodePacked(uri, _tokenId.toString()));
		}
	}
    function supportsInterface(
		bytes4 _interfaceId
	) 
		public
		view 
		override (ERC721, ERC721Enumerable) 
		returns (bool) 
	{
		return super.supportsInterface(_interfaceId);
	}

	function _beforeTokenTransfer(
		address _from, 
		address _to, 
		uint256 _tokenId
	) 
		internal 
		 override(ERC721, ERC721Enumerable) 
	{
		super._beforeTokenTransfer(_from, _to, _tokenId);
	}

}